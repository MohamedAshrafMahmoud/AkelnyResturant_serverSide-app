<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3fdef"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   ORDER"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/rr"/>


    <android.support.v7.widget.CardView
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@+id/rr"
        android:elevation="4dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">



            <TextView
                android:id="@+id/ordephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Phone"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordetotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="1000"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordeadress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Adress"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordecomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="comment"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
    
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    ORDER DETAILS"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/s"
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/r"/>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lstFoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r"></android.support.v7.widget.RecyclerView>


</RelativeLayout>